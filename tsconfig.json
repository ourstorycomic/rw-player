{
  "compilerOptions": {
    "target": "es6",
    "removeComments": false,
    "moduleResolution": "node",
    "noEmit": true,
    "strict": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "baseUrl": ".",
    "module": "esnext",
    "paths": {
      "@src/*": ["src/*"]
    },
    "lib": ["dom", "es2018"],
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelCore": "@babel/core"
  }
}